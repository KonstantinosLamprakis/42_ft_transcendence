{
    "name": "web-server",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "build": "tsc -p tsconfig.json && npm run build:frontend",
        "start": "node dist/server.js",
        "dev": "ts-node src/server.ts",
        "build:frontend": "tsc -p src/public/tsconfig.json --outDir public && npm run build:css",
        "build:css": "npx tailwindcss -i ./src/public/styles.css -o ./public/styles.css",
        "build:css:watch": "npx tailwindcss -i ./src/public/styles.css -o ./public/styles.css --watch",
        "start:live-server": "live-server public"
    },
    "dependencies": {
        "@fastify/http-proxy": "^11.3.0",
        "@fastify/static": "^8.2.0",
        "@fastify/cors": "^11.0.1",
        "dotenv": "^16.5.0",
        "fastify": "^5.2.1",
        "fs": "^0.0.1-security",
        "path": "^0.12.7",
        "url": "^0.11.4"
    },
    "devDependencies": {
        "@types/node": "^18.19.111",
        "@typescript-eslint/eslint-plugin": "^8.34.1",
        "@typescript-eslint/parser": "^8.33.0",
        "autoprefixer": "^10.4.14",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-prettier": "^5.4.1",
        "fastify-tsconfig": "^3.0.0",
        "live-server": "^1.2.2",
        "postcss": "^8.4.24",
        "prettier": "^3.5.3",
        "tailwindcss": "^3.4.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}