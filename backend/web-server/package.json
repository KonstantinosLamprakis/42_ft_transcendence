{
    "name": "web-server",
    "version": "1.0.0",
    "scripts": {
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "build": "tsc; tsc src/public/client.ts --outDir public",
        "start": "node dist/server.js",
        "dev": "ts-node src/server.ts",
        "build:frontend": "tsc src/public/client.ts --outDir public",
        "build:css": "npx tailwindcss -i ./public/input.css -o ./public/styles.css --minify",
        "start:live-server": "live-server public"
    },
    "dependencies": {
        "fastify": "^4.29.1",
        "@fastify/cors": "^8.5.0",
        "@fastify/static": "^6.10.1"
    },
    "devDependencies": {
        "fastify-tsconfig": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^8.34.1",
        "@typescript-eslint/parser": "^8.33.0",
        "eslint": "^9.29.0",
        "prettier": "^3.5.3",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "eslint-plugin-filenames": "^1.3.2",
        "@types/node": "^18.19.111",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "live-server": "^1.2.2",
        "tailwindcss": "^3.4.1",
        "postcss": "^8.4.24",
        "autoprefixer": "^10.4.14"
    }
}